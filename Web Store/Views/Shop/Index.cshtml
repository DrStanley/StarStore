
@{
    ViewBag.Title = "Shop";
}
@using Web_Store.Entities;

@model Tuple<List<Product>, List<string>>

<script>
    var count = 0;
    function increment() {
        var l = document.getElementById("spanCount");
        var v = l.innerText;
        var value = v == "" ? 0 : parseInt(v);
        value++;
        l.innerText = value;
        alert("Added to Cart")
    }

</script>

<div class="row">
    <h2 class="col-md-4">Shop</h2>

    <div class="col-md-4" style="margin:20px">
        <label> Category: </label> <select onselect="alert('Hey')">
            @foreach (var category in Model.Item2)
            {
                <option>@category</option>

            }
        </select>
        <button>Filter</button>
    </div>
    <a id="cart" class="col-md-2" href="#" style="font: bold; font-family: Arial; margin:20px; "> <label>Cart(<span id="spanCount">0</span>) </label></a>

</div>

<hr />
@if (Model.Item1.Count < 1)
{
    <h4 class="text-danger">Out of Stock</h4>
}
else
{
    foreach (var product in Model.Item1)
    {
<div class="row" style="border:5px #808080">
    <input type="hidden"  value="@product.ProductID" />
    <div class="col-md-4">
        <h3>@product.ProductName</h3>
        <img src="~/Images/376821.jpg" alt="Logo" style="width:350px; height: 200px;" />
    </div>
    <div class="col-md-4">
        <h3>Item Descrption</h3>
        <p>@product.Description</p>

    </div>

    <div class="col-md-4">
        <h3>Actions</h3>

        <div class="form-group">
            <label>Unit Price:</label>
            <div>
                <input type="text" value="@product.UnitPrice" disabled />
            </div>
        </div>
        @if (product.Quantity > 0)
        {
            <div class="form-group">
                <label>Quantity:</label>
                <div>
                    <input type="number" min="0" value="1" />
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Add to Cart" min="0" class="btn-lg btn-success" onclick="increment()" />
            </div>
        }
        else
        {
            <div class="form-group">
                <label>Quantity:</label>
                <div>
                    <input type="text" value="Out of Stock" disabled class="text-danger" />
                </div>
            </div>
        }




    </div>
    <hr />
</div>
        <hr />

                }

}
